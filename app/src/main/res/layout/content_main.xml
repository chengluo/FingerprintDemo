<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_keystore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check Keystore" />

        <TextView
            android:id="@+id/txt_keystore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_fingerprint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check Fingerprint" />

        <TextView
            android:id="@+id/txt_fingerprint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_authenticate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Auth Fingerprint " />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>